<div class="page-header">
  <h1><%= @user.first_name %></h1>
  <ul class="actions">
    <li><%= link_to " New Task", new_user_task_url(@user), class: "new"%></li>
    <li><%= link_to " Edit", edit_user_path(@user), class: "edit"%></li>
    <li><%= link_to " Delete", 
      user_path(@user), 
      method: :delete, 
      data: { confirm: "Are you sure you want to delete this user?" },
      class: "delete"%>
    </li>
  </ul>
</div>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
  <br/>
  <strong>Estimated Work remaining:</strong>
  <%= @user.daily_hours %>
  <br/>


  <h3>Tasks</h3>
  </br>
  <% @user.tasks.each do |task|%>
    <div class='task-item'>
      <strong><%= task.description %></strong>
      <a href="" class='start btn btn-primary'>Complete</a>
      <a href="" class='start btn btn-primary'>Start</a>
    </div>
  <% end %>
</p>



