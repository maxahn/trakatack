<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Users</h1>
  <ul class="actions">
    <li>
      <%= link_to "New User", new_user_path, class: "new" %>
    </li>
  </ul>
</div>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Email</th>
      <th>Daily hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.first_name, user %></td>
        <td><%= user.email %></td>
        <td><%= user.daily_hours %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

