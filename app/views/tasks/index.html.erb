<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Active</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= task.estimated_duration %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', user_tasks_url %></td>


        <% if false %>
        <td><%= link_to 'Edit', edit_user_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if false %>
<%= link_to 'New Task', new_task_path %>
<% end %>
