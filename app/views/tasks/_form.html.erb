<%= simple_form_for([user, task]) do |form| %>
  <%= form.input :description %>
  <%= form.input :estimated_duration, as: :time%>
  <%= form.input :due_date, as: :datetime, placeholder: DateTime.now %>
  <% if false %>
    <%= select_datetime DateTime.now, prefix: :due_date%>
  <% end %>
  <%= form.input :priority, collection: Task.priorities.keys, selected: Task.priorities.keys[1] %> 
  <%= form.button :submit, class: "btn-primary" %>

<% end %>
